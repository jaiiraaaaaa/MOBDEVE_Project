<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >
    <!-- shape property for the view based on the value particular view would be drawn -->

    <solid android:color="#5B5B5B" /> <!-- Fill and stroke color set to #5B5B5B -->

    <corners
        android:radius="25dp" />
    <stroke android:width="0.9dp"
        android:color="#5B5B5B" /> <!-- Stroke color set to #5B5B5B -->

    <size
        android:height="40dp"
        android:width="40dp" />
    <!-- size element is used to define a design here height & width are the same means a square with some radius -->
</shape>