<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="20dp">

    <TableLayout
        android:id="@+id/tasks_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/editable_task_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/tasks_body_cell_bg"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:padding="3dp"
                android:text="TITLE"
                android:textSize="12sp"
                android:maxLength="10"/>

            <TextView
                android:id="@+id/editable_task_subject"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/tasks_body_cell_bg"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:padding="3dp"
                android:text="SUBJECT"
                android:textSize="12sp"
                android:maxLength="10"/>

            <TextView
                android:id="@+id/editable_task_status"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/tasks_body_cell_bg"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:padding="3dp"
                android:text="STATUS"
                android:textSize="12sp"
                android:maxLength="11"/>

            <TextView
                android:id="@+id/editable_task_deadline"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/tasks_body_cell_bg"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:padding="3dp"
                android:text="00/00/00"
                android:textSize="12sp"
                android:maxLength="14"/>

            <ImageButton
                android:id="@+id/task_edit_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/tasks_body_cell_bg"
                android:gravity="center"
                android:padding="3dp"
                android:src="@drawable/baseline_edit_24"
                android:textSize="12sp"
                android:maxLength="14"/>

            <ImageButton
                android:id="@+id/task_delete_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/tasks_body_cell_bg"
                android:gravity="center"
                android:padding="3dp"
                android:src="@drawable/baseline_delete_24"
                android:textSize="12sp"
                android:maxLength="14"/>
        </TableRow>


    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>