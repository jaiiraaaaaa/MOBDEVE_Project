<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/gray">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/notesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="139dp"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.467" />


        <ImageView
            android:id="@+id/overview_iv_logo"
            android:layout_width="71dp"
            android:layout_height="53dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="290dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.38"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/mobdeve___high_fidel_prototype" />

        <TextView
            android:id="@+id/overview_planify_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:shadowColor="@color/black"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:text="PLANIFY"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/overview_iv_logo"
            app:layout_constraintEnd_toEndOf="@+id/overview_iv_logo"
            app:layout_constraintStart_toStartOf="@+id/overview_iv_logo"
            app:layout_constraintTop_toTopOf="@+id/overview_iv_logo"
            app:layout_constraintVertical_bias="0.56" />

        <ImageButton
            android:id="@+id/overview_menu_btn"
            android:layout_width="64dp"
            android:layout_height="38dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="4dp"
            android:background="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/overview_iv_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/menu_bar" />

        <ImageButton
            android:id="@+id/tasks_sort_btn"
            android:layout_width="77dp"
            android:layout_height="28dp"
            android:layout_marginStart="10dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/task_overview_iv"
            app:layout_constraintEnd_toStartOf="@+id/task_overview_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/task_overview_iv"
            app:srcCompat="@drawable/tasks_sort_by" />

        <ImageView
            android:id="@+id/task_overview_iv"
            android:layout_width="281dp"
            android:layout_height="29dp"
            android:layout_marginTop="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.83"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/task_overview_bg" />

        <TextView
            android:id="@+id/task_overview_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Task Overview"
            android:textColor="@color/pale_yellow"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/task_overview_iv"
            app:layout_constraintEnd_toEndOf="@+id/task_overview_iv"
            app:layout_constraintStart_toStartOf="@+id/task_overview_iv"
            app:layout_constraintTop_toTopOf="@+id/task_overview_iv" />

        <include
            android:id="@+id/tasks_header_tr"
            layout="@layout/tasks_overview_header"
            android:layout_width="367dp"
            android:layout_height="22dp"
            android:layout_marginTop="7dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/task_overview_iv" />

        <ScrollView
            android:id="@+id/tasks_sv"
            android:layout_width="367dp"
            android:layout_height="124dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tasks_header_tr">

            <include
                layout="@layout/task_overview_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </ScrollView>

        <ImageButton
            android:id="@+id/add_task_btn"
            android:layout_width="74dp"
            android:layout_height="24dp"
            android:layout_marginTop="4dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="@+id/tasks_sv"
            app:layout_constraintTop_toBottomOf="@+id/tasks_sv"
            app:srcCompat="@drawable/add_task_btn" />

        <ImageView
            android:id="@+id/notes_attachments_iv"
            android:layout_width="281dp"
            android:layout_height="29dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_task_btn"
            app:srcCompat="@drawable/notes_attachments_bg" />

        <TextView
            android:id="@+id/notes_attachments_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Notes and Attachments"
            android:textColor="@color/dark_gray"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/notes_attachments_iv"
            app:layout_constraintEnd_toEndOf="@+id/notes_attachments_iv"
            app:layout_constraintStart_toStartOf="@+id/notes_attachments_iv"
            app:layout_constraintTop_toTopOf="@+id/notes_attachments_iv" />

        <ImageButton
            android:id="@+id/notes_sort_btn"
            android:layout_width="78dp"
            android:layout_height="27dp"
            android:layout_marginStart="5dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/notes_attachments_iv"
            app:layout_constraintStart_toEndOf="@+id/notes_attachments_iv"
            app:layout_constraintTop_toTopOf="@+id/notes_attachments_iv"
            app:srcCompat="@drawable/notes_sort_by" />

        <ImageButton
            android:id="@+id/add_note_btn"
            android:layout_width="74dp"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notesRecyclerView"
            app:srcCompat="@drawable/add_note_btn" />

        <ImageView
            android:id="@+id/calendar_iv"
            android:layout_width="281dp"
            android:layout_height="29dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.791"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_note_btn"
            app:srcCompat="@drawable/calendar_bg" />

        <ImageButton
            android:id="@+id/calendar_view_btn"
            android:layout_width="78dp"
            android:layout_height="27dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="2dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/calendar_iv"
            app:layout_constraintEnd_toStartOf="@+id/calendar_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/calendar_iv"
            app:srcCompat="@drawable/calendar_view_by" />

        <TextView
            android:id="@+id/calendar_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="sans-serif-black"
            android:text="Calendar"
            android:textColor="@color/brown"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/calendar_iv"
            app:layout_constraintEnd_toEndOf="@+id/calendar_iv"
            app:layout_constraintStart_toStartOf="@+id/calendar_iv"
            app:layout_constraintTop_toTopOf="@+id/calendar_iv" />

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="359dp"
            android:layout_height="301dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.48"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calendar_iv"
            app:layout_constraintVertical_bias="1.0"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>