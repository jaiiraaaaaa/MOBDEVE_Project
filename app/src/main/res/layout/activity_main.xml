<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <ImageView
        android:id="@+id/main_iv_logo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mobdeve___high_fidel_prototype" />

    <TextView
        android:id="@+id/main_tv_planify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:shadowColor="@color/black"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"
        android:text="PLANIFY"
        android:textColor="@color/white"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="@+id/main_iv_logo"
        app:layout_constraintEnd_toEndOf="@+id/main_iv_logo"
        app:layout_constraintStart_toStartOf="@+id/main_iv_logo"
        app:layout_constraintTop_toTopOf="@+id/main_iv_logo"
        app:layout_constraintVertical_bias="0.54" />

    <TextView
        android:id="@+id/main_tv_motto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="Your personal productivity planner."
        android:textColor="@color/brown"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/main_iv_logo"
        app:layout_constraintEnd_toEndOf="@+id/main_iv_logo"
        app:layout_constraintStart_toStartOf="@+id/main_iv_logo"
        app:layout_constraintTop_toTopOf="@+id/main_iv_logo"
        app:layout_constraintVertical_bias="0.842" />

    <TextView
        android:id="@+id/main_tv_terms"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="@string/catchphrase"
        android:textColor="@color/brown"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/main_tv_motto"
        app:layout_constraintStart_toStartOf="@+id/main_tv_motto"
        app:layout_constraintTop_toBottomOf="@+id/main_btn_continue" />

    <Button
        android:id="@+id/main_btn_continue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/yellow"
        android:text="Continue to App"
        android:drawableEnd="@drawable/continue_arrow"
        app:layout_constraintEnd_toEndOf="@+id/main_tv_motto"
        app:layout_constraintStart_toStartOf="@+id/main_tv_motto"
        app:layout_constraintTop_toBottomOf="@+id/main_iv_logo" />
</androidx.constraintlayout.widget.ConstraintLayout>